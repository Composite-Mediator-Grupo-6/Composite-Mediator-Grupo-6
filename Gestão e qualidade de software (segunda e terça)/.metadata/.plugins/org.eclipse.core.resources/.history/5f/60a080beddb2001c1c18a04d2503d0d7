package pratica_04;

import java.util.Scanner;

public class Pratica_04_4 {

	public static void pratica() {
		Scanner scan = new Scanner(System.in);
		int num1 = -1, num2 = -1, num3 = -1;

		while (num1 < 0 || num1 > 10) {
			System.out.println("nota 1 de 0 a 10: ");
			num1 = scan.nextInt();
		}
		while (num2 < 0 || num2 > 10) {
			System.out.println("nota 2 de 0 a 10: ");
			num2 = scan.nextInt();
		}
		while (num3 < 0 || num3 > 10) {
			System.out.println("nota 3 de 0 a 10: ");
			num3 = scan.nextInt();
		}

		mediaCalc(num1, num2, num3);

	}

	public static void IMC(float peso, int altura) {
		float IMC = peso / (altura * altura);

		if (IMC >= 0 && IMC < 3) {
			System.out.println("Reprovado");
		} else if (IMC >= 3 && IMC < 7) {
			System.out.println("EXAME");
		} else if (IMC >= 7 && IMC <= 10) {
			System.out.println("APROVADO");
		}
	}
}
