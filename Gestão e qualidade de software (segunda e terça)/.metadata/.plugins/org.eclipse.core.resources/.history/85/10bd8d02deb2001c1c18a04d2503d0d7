package pratica_04;

import java.util.Scanner;

public class Pratica_04_4 {

	public static void pratica() {
		Scanner scan = new Scanner(System.in);
		int num1 = -1, num2 = -1, num3 = -1;

		while (num1 < 0 || num1 > 10) {
			System.out.println("nota 1 de 0 a 10: ");
			num1 = scan.nextInt();
		}
		while (num2 < 0 || num2 > 10) {
			System.out.println("nota 2 de 0 a 10: ");
			num2 = scan.nextInt();
		}
		while (num3 < 0 || num3 > 10) {
			System.out.println("nota 3 de 0 a 10: ");
			num3 = scan.nextInt();
		}

		mediaCalc(num1, num2, num3);

	}

	public static void IMC(float peso, int altura) {
		float IMC = peso / (altura * altura);

		if (IMC < 20) {
			System.out.println("Abaixo do Peso");
		} else if (IMC >= 20 && IMC < 25) {
			System.out.println("Normal");
		} else if (IMC >= 25 && IMC < 30) {
			System.out.println("Sobrepeso");
		} else if (IMC >= 30 && IMC < 40) {
			System.out.println("Obesidade");
		} else if (IMC >= 40) {
			System.out.println("Obesidade Mórbida");
		}
	}
}
